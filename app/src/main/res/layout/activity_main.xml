<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/tvCreateDir"
        style="@style/Common_Button"
        android:text="Create Dir"/>

    <View
        style="@style/Common_CutLine"/>

    <TextView
        android:id="@+id/tvSaveByFileOutputStream"
        style="@style/Common_Button"
        android:text="Save By FileOutputStream"/>

    <View
        style="@style/Common_CutLine"/>

    <TextView
        android:id="@+id/tvSaveByFileOutput"
        style="@style/Common_Button"
        android:text="Save By FileOutput"/>

    <View
        style="@style/Common_CutLine"/>

    <TextView
        android:id="@+id/tvSaveByAccessFile"
        style="@style/Common_Button"
        android:text="Save By AccessFile"/>

    <View
        style="@style/Common_CutLine"/>

</LinearLayout>